#include <iostream>
using namespace std;
struct BST
{
int data;
struct BST *left;
struct BST *right;
};
typedef struct BST node;
node *root = NULL;
node *q;
int flag = 0;
void create();
int main()
{
    void searchinsert(node *root);
    void count();
    //void delete();
    void Maxdepth();
    void Mindepth();
    void Successor();
    void Predecessor();
    void Maxelement(node *root);
    void Minelement(node *root);
    void DetectBST();
    void preprint(node *root);
    void inprint(node *root);
    void postprint(node *root);
    void insert();
    void search(node *,int);
    int ch,ch1;
   do
    {
    cout<<"Enter Your Choice ";
    cin>>ch;
    switch(ch)
    {
        case 0: create();
        break;
        case 1: insert();
        break;
        // case 2: count();
        // break;
        case 3:
        {
        int ele;
    cout<<"Enter The Element To Search ";
    cin>>ele;
        search(root,ele);
        if(flag == 0)
        cout<<"Element Not Found"<<endl;
        }
        break;
        case 4: do
        {
        cout<<endl;
        cout<<"Enter 1 for Preorder 2 for Inorder and 3 for Postorder and 4 to Exit ";
        cin>>ch1;
        switch(ch1)
        {
        case 1: preprint(root);
        break;
        case 2: inprint(root);
        break;
        case 3: postprint(root);
        break;
        case 4:
        break;
        }
        }while(ch1!=4);
        break;
       // case 5: delete();
        //break;
        case 6: break;
        case 7: Maxelement(root);
        break;
        case 8: Minelement(root);
        break;
        // case 9: Maxdepth();
        // break;
        // case 10: Mindepth();
        // break;
        // case 11: DetectBST();
        // break;
        // case 12: Successor();
        // break;
        // case 13: Predecessor();
        // break;
    }
    }while(ch!=6);
}
void create()
    {
         q = new node;
         q->left = NULL;
         cout<<"Enter The Element To Insert ";
         cin>>q->data;
         q->right = NULL;
    }
    void preprint(node *p)
    {
    if(p == NULL)
    return;
    else
    {
    cout<<p->data<<" ";
    preprint(p->left);
    preprint(p->right);
    }
    }
    void postprint(node *p)
    {
    if(p == NULL)
    return;
    else
    {
    preprint(p->left);
    preprint(p->right);
    cout<<p->data<<" ";
    }
    }
    void inprint(node *p)
    {
    if(p == NULL)
    return;
    else
    {
    preprint(p->left);
    cout<<p->data<<" ";
    preprint(p->right);
    }
    cout<<endl;
    }
    void insert()
    {
    void searchinsert(node *);
    create();
    if(root == NULL)
    root = q;
    else
    searchinsert(root);
    }
    void searchinsert(node *p)
    {
    if(q->data < p->data && p->left == NULL)
    p->left = q;
    if(q->data < p->data && p->left != NULL)
    searchinsert(p->left);
    if(q->data > p->data && p->right == NULL)
    p->right = q;
    if(q->data > p->data && p->right != NULL)
    searchinsert(p->right);
    }
    void Maxelement(node *p)
    {
        while(p->right != NULL)
        p = p->right;
        cout<<p->data;
    }
    void Minelement(node *p)
    {
     while(p->left != NULL)
        p = p->left;
        cout<<p->data;
    }
    void search(node *p,int x)
    {
    flag = 0;
    if(p == NULL)
    return;
    if(x == p->data)
    {
    cout<<"Element Found"<<endl;
    flag = 1;
    return;
    }
    if(x<p->data)
    search(p->left,x);
    else
     search(p->right,x);
    }